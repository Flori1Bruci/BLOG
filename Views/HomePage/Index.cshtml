@section css{
    <style>
        .pagination-outer {
            text-align: center;
        }

        .pagination {
            text-align: center;
            font-family: 'Rubik', sans-serif;
            display: inline-flex;
            position: relative;
        }

            .pagination li span,
            .pagination li.active span {
                border-radius: 50% !important;
            }

                .pagination li span.page-link {
                    width: 40px;
                    height: 40px;
                    padding-right: 0px;
                    padding-top: 0px;
                    padding-left: 0px;
                    padding-bottom: 0px;
                }

                .pagination li a.page-link,
                .pagination li span.page-link,
                .pagination li.active a.page-link,
                .pagination li.active span.page-link {
                    color: /*#007bff*/ firebrick;
                    background-color: transparent;
                    font-size: 22px;
                    font-weight: 500;
                    line-height: 28px;
                    height: 40px;
                    width: 40px;
                    margin: 0 5px 10px;
                    border: none;
                    border-radius: 0;
                    overflow: hidden;
                    position: relative;
                    transition: all 0.4s ease 0s;
                }

                    .pagination li.active a.page-link,
                    .pagination li.active span.page-link,
                    .pagination li a.page-link:hover,
                    .pagination li span.page-link:hover,
                    .pagination li.active a.page-link:hover,
                    .pagination li.active span.page-link:hover {
                        color: #fff;
                        background-color: firebrick;
                    }

            .pagination li:first-child a.page-link:hover,
            .pagination li:first-child span.page-link:hover,
            .pagination li:last-child a.page-link:hover,
            .pagination li:last-child span.page-link:hover {
                box-shadow: 0 0 10px rgba(0,0,0,0.9);
            }

            .pagination li a.page-link:before,
            .pagination li span.page-link:before,
            .pagination li.active a.page-link:before,
            .pagination li.active span.page-link:before {
                content: attr(data-hover);
                color: rgba(255,255,255,0.2);
                font-size: 80px;
                font-weight: 700;
                height: 100%;
                width: 100%;
                opacity: 1;
                position: absolute;
                top: 100%;
                left: 0;
                transition: all 0.3s ease 0s;
            }

            .pagination li a.page-link:hover:before,
            .pagination li span.page-link:hover:before,
            .pagination li.active a.page-link:hover:before,
            .pagination li.active span.page-link:hover:before {
                opacity: 1;
                top: 10px;
            }
    </style>
}

