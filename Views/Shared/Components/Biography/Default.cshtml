@model IEnumerable<ArticleHomepageVM>
@{
    Layout = null;
}

@foreach (var item in Model.TakeLast(1))
{
    <div class="sidebar-box">
        <div class="bio text-center">
            <img src="~/documents/@item.ImageName" alt="Image Placeholder" class="img-fluid">
            <div class="bio-body">
                <h2 style="text-transform:uppercase;">@item.Title</h2>
                <p>@item.Body.Substring(0, 120)...</p>
                <p>

                    <a asp-controller="AdmArticle" asp-action="Details" asp-route-id="@item.Id"
                       asp-route-serp="@item.Serp" class="btn btn-primary btn-sm rounded"
                       style="background-color:firebrick;border-color:firebrick;padding-bottom:5px;padding-top:5px;padding-left:22px;padding-right:22px;">
                        <span style="font-size:larger;">Lexo</span>
                    </a>
                </p>
                <p class="social">
                    <a href="#" class="p-2"><span class="fa fa-facebook"></span></a>
                    <a href="#" class="p-2"><span class="fa fa-twitter"></span></a>
                    <a href="#" class="p-2"><span class="fa fa-instagram"></span></a>
                    <a href="#" class="p-2"><span class="fa fa-youtube-play"></span></a>
                </p>
            </div>
        </div>
    </div>
}
